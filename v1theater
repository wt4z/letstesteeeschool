<!-- Invisible hotspot -->
<div id="hotspot" title="hidden area"></div>

<!-- Hidden password box -->
<div id="passwordBox">
  <input type="password" id="password" placeholder="code" />
  <button onclick="checkPassword()">â†’</button>
</div>

<!-- Hidden embed -->
<div id="embedContainer">
  <iframe src="https://myappsclasslink.pegle.com" width="100%" height="100%"></iframe>
</div>

<script>
  // Ghost hotspot click
  document.getElementById('hotspot').addEventListener('click', () => {
    const pwBox = document.getElementById('passwordBox');
    pwBox.style.display = 'block';
    document.getElementById('password').focus();
  });

  // Password check
  function checkPassword() {
    const pw = document.getElementById('password').value;
    const embed = document.getElementById('embedContainer');
    const correctPassword = "letmein"; // change to your secret

    if (pw === correctPassword) {
      embed.style.display = "block";
      document.getElementById('passwordBox').style.display = "none";
    } else {
      alert("Incorrect code!");
    }
  }
</script>

